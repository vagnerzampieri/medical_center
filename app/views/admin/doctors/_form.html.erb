    <td><%= f.text_field :city %></td>
  </tr>
  <tr>
    <td><%= f.label I18n.t :telephone %>:</td>
    <td>
      <%= f.text_field :area_code, :size => 3 %><%= f.text_field :telephone %> 
    </td>
  </tr>
  <tr>
    <td><%= f.label I18n.t :mobile %>:</td>
    <td><%= f.text_field :mobile %></td>
  </tr>
