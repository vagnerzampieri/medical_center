<table>
  <tr>
    <td><%= f.label I18n.t :name %>:</td>
    <td><%= f.text_field :name %></td> 
  </tr>
  <tr>
    <td><%= f.label I18n.t :birth %>:</td>
    <td>
    <%= f.date_select :birth, 
		          :use_month_numbers => true,
		          :order => [:day, :month, :year],
		          :default => Time.now,
		          :start_year => 1900,
		          :end_year => Time.now.year + 1 %></td>
  </tr>
  <tr>
    <td><%= f.label I18n.t :sex %>:</td>
    <td>
      <%= f.radio_button :sex, 'Masculino', :checked => true %> M
      <%= f.radio_button :sex, 'Feminino', :checked => false %> F 
    </td>
  </tr>
  <tr>
    <td><%= f.label I18n.t :cpf %>:</td>
    <td><%= f.text_field :cpf %></td>
  </tr>
  <tr>
    <td><%= f.label I18n.t :state %>:</td>
    <td>
      <%= f.collection_select(:state_id, @states, :id, :name, {:prompt => 'Selecione'} ) %>
    </td>
  </tr>
    <tr>
    <td><%= f.label I18n.t :address %>:</td>
