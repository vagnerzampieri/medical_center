    <td><%= f.label I18n.t :crm %>:</td>
    <td><%= f.text_field :crm %></td>
  </tr>
  <tr>
    <td><%= f.label I18n.t :specialty %>:</td>  
    <!-- revisar -->
    <td>
      <% specialty_id = select_specialty(1) if params[:action] == 'edit' %>
      <%= collection_select(:specialty, '1', @specialties, :id, :name, {:prompt => 'Selecione', :selected => specialty_id} ) %></br>
      <% specialty_id = select_specialty(2) if params[:action] == 'edit' %>
      <%= collection_select(:specialty, '2', @specialties, :id, :name, {:prompt => 'Selecione', :selected => specialty_id} ) %></br>
      <% specialty_id = select_specialty(3) if params[:action] == 'edit' %>
      <%= collection_select(:specialty, '3', @specialties, :id, :name, {:prompt => 'Selecione', :selected => specialty_id} ) %></br>
