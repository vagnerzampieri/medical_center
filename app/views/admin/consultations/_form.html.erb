<script>
  $(document).ready(function(){
    //$('#consultation_patient_id').hide(6);
    $('#consultation_specialty_id').change(function(){
      var specialty = $(this).val();
      $.ajax({
        url: this.href,
        type: 'get',
        data: {specialty_id: specialty},
        dataType: 'script'
      });

    });
  });
</script>
<table>
  <tr>
    <td><%= f.label I18n.t :specialty %>:</td>
    <td>
      <%= f.collection_select(:specialty_id, @specialties, :id, :name, {:prompt => 'Selecione'} ) %>
    </td>
  </tr>
  <tr id="doctor">
  </tr>
</table>
